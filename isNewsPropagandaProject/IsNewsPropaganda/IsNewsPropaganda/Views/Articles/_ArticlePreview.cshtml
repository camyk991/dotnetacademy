@model ArticleModel

<div class="single-article">
    <h3>@Model.Title</h3>
    <div class="article-content">
        <p>
            @Model.Content
        </p>
    </div>
    <div class="action-links">
        <a asp-action="EditArticle" asp-route-id="@Model.ArticleId" asp-controller="Articles">Edit</a>
    </div>
</div>